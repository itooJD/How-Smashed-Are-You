<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emptyshit.hsay">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="How Smashed Are You"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".front.navigation.WindowStart"
            android:windowSoftInputMode="stateVisible|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".front.player.WindowLogIn" />
        <activity android:name=".front.player.WindowRegister" />
        <activity android:name=".front.player.WindowPlayerProfile" />
        <activity android:name=".front.navigation.WindowGateWay" />
        <activity android:name=".front.lock.WindowLock" />
        <activity android:name=".front.games.WindowGame" />
        <activity android:name=".front.games.WindowShowTime"></activity>
    </application>

</manifest>